<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="10dp"
    app:cardBackgroundColor="#CCC3C3C3"
    android:layout_margin="10dp"
    android:id="@+id/cv"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/review_photo"
            android:layout_width="234dp"
            android:layout_height="275dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/caption"
            app:layout_constraintLeft_toLeftOf="@+id/review_photo"
            app:layout_constraintTop_toBottomOf="@+id/review_photo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/review_photo"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/dislikes"
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="@+id/review_photo"
            app:layout_constraintTop_toBottomOf="@+id/review_photo"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/review_photo"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="316dp"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_photo"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="316dp"
            android:layout_height="29dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            app:layout_constraintLeft_toLeftOf="@+id/caption"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/caption"
            app:layout_constraintHorizontal_bias="0.046"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="317dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tags"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="5"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
